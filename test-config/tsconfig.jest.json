{
  "compilerOptions": {
    "baseUrl": "..",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@styles/*": [
        "styles/*"
      ]
    }
  },
  "exclude": [
    "../node_modules"
  ],
  "include": [
    "../next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./test-config/jest-setup.ts"
  ]
}
